@{
    ViewData["Title"] = "Server Error";
    Layout = "_Layout";
}

<div class="error-page">
    <div class="error-container">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle text-warning"></i>
        </div>
        <div class="error-content">
            <h1 class="error-code">500</h1>
            <h2 class="error-title">Internal Server Error</h2>
            <p class="error-description">
                Something went wrong on our end. We're working to fix this issue. Please try again later or contact support if the problem persists.
            </p>
            <div class="error-actions">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Go to Dashboard
                </a>
                <button onclick="location.reload()" class="btn btn-warning">
                    <i class="fas fa-redo me-2"></i>Try Again
                </button>
            </div>
        </div>
    </div>
    
    <!-- Support Information -->
    <div class="support-info">
        <h5>Need Help?</h5>
        <div class="support-grid">
            <div class="support-item">
                <i class="fas fa-envelope text-primary"></i>
                <div>
                    <strong>Email Support</strong>
                    <p>support@bugtracker.com</p>
                </div>
            </div>
            <div class="support-item">
                <i class="fas fa-phone text-success"></i>
                <div>
                    <strong>Phone Support</strong>
                    <p>+1 (555) 123-4567</p>
                </div>
            </div>
            <div class="support-item">
                <i class="fas fa-clock text-info"></i>
                <div>
                    <strong>Support Hours</strong>
                    <p>Mon-Fri 9AM-6PM EST</p>
                </div>
            </div>
        </div>
        
        <div class="error-details">
            <details>
                <summary>Technical Details</summary>
                <div class="tech-info">
                    <p><strong>Error ID:</strong> <code>@Guid.NewGuid().ToString("N")[..8]</code></p>
                    <p><strong>Timestamp:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
                    <p><strong>User Agent:</strong> <code>@Context.Request.Headers["User-Agent"]</code></p>
                    <p class="text-muted">Please include this information when contacting support.</p>
                </div>
            </details>
        </div>
    </div>
</div>

<style>
.error-page {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
}

.error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 600px;
    margin-bottom: 3rem;
}

.error-icon {
    font-size: 4rem;
    margin-bottom: 2rem;
    opacity: 0.7;
}

.error-code {
    font-size: 6rem;
    font-weight: 700;
    color: var(--accent-orange);
    margin: 0;
    line-height: 1;
}

.error-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--dark-gray);
    margin: 1rem 0;
}

.error-description {
    font-size: 1.1rem;
    color: var(--text-gray);
    margin-bottom: 2rem;
    line-height: 1.6;
}

.error-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
}

.support-info {
    background: var(--white);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-light);
    max-width: 600px;
    width: 100%;
    text-align: left;
}

.support-info h5 {
    color: var(--dark-gray);
    margin-bottom: 1.5rem;
    font-weight: 600;
    text-align: center;
}

.support-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.support-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border-radius: var(--border-radius);
    background: var(--light-gray);
}

.support-item i {
    font-size: 1.5rem;
    margin-top: 0.25rem;
}

.support-item strong {
    display: block;
    color: var(--dark-gray);
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
}

.support-item p {
    margin: 0;
    color: var(--text-gray);
    font-size: 0.85rem;
}

.error-details {
    border-top: 1px solid var(--medium-gray);
    padding-top: 1.5rem;
}

.error-details summary {
    cursor: pointer;
    font-weight: 600;
    color: var(--dark-gray);
    padding: 0.5rem;
    border-radius: var(--border-radius);
    transition: background-color 0.3s ease;
}

.error-details summary:hover {
    background-color: var(--light-gray);
}

.tech-info {
    margin-top: 1rem;
    padding: 1rem;
    background: var(--light-gray);
    border-radius: var(--border-radius);
    font-size: 0.85rem;
}

.tech-info p {
    margin: 0.5rem 0;
}

.tech-info code {
    background: var(--white);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
}

@@media (max-width: 768px) {
    .error-code {
        font-size: 4rem;
    }
    
    .error-title {
        font-size: 1.5rem;
    }
    
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-actions .btn {
        width: 200px;
    }
    
    .support-grid {
        grid-template-columns: 1fr;
    }
}
</style>